                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding AddUserCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </mui:ModernButton>
        </StackPanel>
    </Grid>
</controls:ModernUserControl>
